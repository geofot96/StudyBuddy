<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.epfl.sweng.studdybuddy">

    <application
        android:name=".StudyBuddy"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.MainActivity">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GroupsActivity"
            android:parentActivityName=".activities.MainActivity">

            <!-- The meta-data tag is required if you support API level 15 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.CreateGroupActivity"
            android:parentActivityName=".GroupsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GroupsActivity" />
        </activity>
        <activity
            android:name=".activities.CourseSelectActivity"
            android:parentActivityName=".activities.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.CourseSelectActivity" />
        </activity>
        <activity android:name=".activities.ProfileTab" />
        <activity android:name=".DummyGoogleSignInActivity" />
        <activity android:name=".DummyMainActivity" />

    </application>

</manifest>
